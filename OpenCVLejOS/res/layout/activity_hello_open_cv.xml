<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
        <org.opencv.android.JavaCameraView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:visibility="gone"
	    android:id="@+id/helloOpen"
	    app:camera_id="any"/>
        <Button 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/menu_boton"
	    	android:text="Menu"
	    	android:onClick="abrirMenu"
	    	/>
        <Button 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/filtro_boton"
	    	android:text="HVS"
	    	android:onClick="cambiarVista"
	    	android:layout_marginLeft="50dp"
	    	/>
        
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conectar_boton"
            android:onClick="conectarLego"
            android:layout_marginLeft="100dp"
            android:text="Conectar"
            />
        
	    <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/menu"
	    	android:visibility="invisible"
	    	android:orientation="vertical"
	    	android:background="#00000088"
	    	android:layout_marginTop="40dp"
	        >
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="LH"
	            android:id="@+id/lh_text"/>
	        <SeekBar 
            android:layout_width="150dp"
	    	android:layout_height="wrap_content"
	    	android:max="255"
	    	android:id="@+id/h"
            />
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="LS"
	            android:id="@+id/ls_text"/>
        <SeekBar 
            android:layout_width="150dp"
	    	android:layout_height="wrap_content"
	    	android:max="255"
	    	android:id="@+id/s"
            />
        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="LV"
	            android:id="@+id/lv_text"/>
        <SeekBar 
            android:layout_width="150dp"
	    	android:layout_height="wrap_content"
	    	android:max="255"
	    	android:id="@+id/v"
            />
        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="HH"
	            android:id="@+id/hh_text"/>
        <SeekBar 
            android:layout_width="150dp"
	    	android:layout_height="wrap_content"
	    	android:max="255"
	    	android:id="@+id/h2"
            />
        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="HS"
	            android:id="@+id/hs_text"
	            />
        <SeekBar 
            android:layout_width="150dp"
	    	android:layout_height="wrap_content"
	    	android:max="255"
	    	android:id="@+id/s2"
            />
        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="HV"
	            android:id="@+id/hv_text"/>
        <SeekBar 
            android:layout_width="150dp"
	    	android:layout_height="wrap_content"
	    	android:max="255"
	    	android:id="@+id/v2"
            />
	        
	    </LinearLayout>
                
    </RelativeLayout>
